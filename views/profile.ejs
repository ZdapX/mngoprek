<%- include('partials/header') %>
<main class="container mx-auto px-6 pt-32 pb-40">
    <div class="grid md:grid-cols-2 gap-12">
        <!-- Admin Profile -->
        <div class="glass p-10 rounded-[3rem] relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-8 text-red-600 font-bold opacity-20 text-4xl font-mono">ADMIN</div>
            <img src="<%= admin.photoUrl %>" class="w-32 h-32 rounded-full border-4 border-red-600 mb-8 grayscale hover:grayscale-0 transition duration-500">
            <h2 class="text-4xl font-bold tracking-tighter"><%= admin.name %></h2>
            <div class="mt-4 flex gap-2">
                <% admin.hashtags.forEach(h => { %>
                <span class="text-[10px] text-red-600 font-mono"><%= h %></span>
                <% }) %>
            </div>
            <div class="mt-8 p-6 bg-zinc-900/50 rounded-2xl italic text-zinc-300 border-l-2 border-red-600">
                "<%= admin.quote %>"
            </div>
            <% if (isOwnerSession) { %>
                <a href="/admin/edit-profile/<%= admin._id %>" class="inline-block mt-8 text-xs font-bold border-b border-white pb-1">EDIT IDENTITY</a>
            <% } %>
        </div>

        <!-- Owner Profile -->
        <div class="glass p-10 rounded-[3rem] relative overflow-hidden group">
            <div class="absolute top-0 right-0 p-8 text-red-600 font-bold opacity-20 text-4xl font-mono">OWNER</div>
            <img src="<%= owner.photoUrl %>" class="w-32 h-32 rounded-full border-4 border-red-600 mb-8 grayscale hover:grayscale-0 transition duration-500">
            <h2 class="text-4xl font-bold tracking-tighter"><%= owner.name %></h2>
            <div class="mt-4 flex gap-2">
                <% owner.hashtags.forEach(h => { %>
                <span class="text-[10px] text-red-600 font-mono"><%= h %></span>
                <% }) %>
            </div>
            <div class="mt-8 p-6 bg-zinc-900/50 rounded-2xl italic text-zinc-300 border-l-2 border-red-600">
                "<%= owner.quote %>"
            </div>
        </div>
    </div>

    <!-- Stats Bar -->
    <div class="mt-12 glass p-8 rounded-[2.5rem] flex justify-around items-center text-center">
        <div>
            <p class="text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Total Hub Projects</p>
            <span class="text-3xl font-bold font-mono text-red-600"><%= totalProjects %></span>
        </div>
        <div class="w-[1px] h-12 bg-zinc-800"></div>
        <div>
            <p class="text-zinc-500 text-[10px] uppercase tracking-widest mb-1">Total Global Likes</p>
            <span class="text-3xl font-bold font-mono text-red-600"><%= totalLikes %></span>
        </div>
    </div>
</main>
<%- include('partials/footer') %>
