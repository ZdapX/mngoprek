<%- include('partials/header') %>

<main class="container mx-auto px-6 pt-32 pb-40 max-w-5xl">
    <!-- Breadcrumb & Back -->
    <a href="/" class="text-zinc-500 hover:text-red-600 mb-8 inline-block transition">← Kembali ke Hub</a>

    <div class="flex flex-col md:flex-row justify-between items-start gap-8 mb-12">
        <div>
            <span class="text-red-600 font-mono tracking-widest uppercase text-sm"><%= project.language %></span>
            <h1 class="text-5xl font-bold mt-2 tracking-tighter"><%= project.name %></h1>
            <p class="text-zinc-400 mt-4 max-w-2xl"><%= project.notes || 'Tidak ada catatan tambahan untuk proyek ini.' %></p>
        </div>
        
        <div class="glass p-6 rounded-[2rem] w-full md:w-auto flex flex-row md:flex-col gap-6 items-center">
            <div class="text-center">
                <span class="block text-2xl font-bold" id="like-<%= project._id %>"><%= project.likes %></span>
                <span class="text-[10px] text-zinc-500 uppercase tracking-widest">Likes</span>
            </div>
            <div class="w-[1px] md:w-full h-8 md:h-[1px] bg-zinc-800"></div>
            <div class="text-center">
                <span class="block text-2xl font-bold"><%= project.downloads %></span>
                <span class="text-[10px] text-zinc-500 uppercase tracking-widest">Downloads</span>
            </div>
        </div>
    </div>

    <!-- Main Content Area -->
    <div class="cyber-card p-1 overflow-hidden mb-12">
        <% if (project.type === 'CODE') { %>
            <div class="syntax-box">
                <div class="flex justify-between mb-4 border-b border-zinc-800 pb-2">
                    <span class="text-xs text-zinc-500 font-mono">Source Viewer // <%= project.language %></span>
                    <button onclick="navigator.clipboard.writeText(`<%= project.content %>`)" class="text-[10px] text-red-600 hover:underline">COPY CODE</button>
                </div>
                <pre class="text-sm leading-relaxed"><code><%= project.content %></code></pre>
            </div>
        <% } else { %>
            <div class="relative group">
                <img src="<%= project.previewUrl || 'https://via.placeholder.com/1200x600?text=No+Preview+Available' %>" 
                     class="w-full h-auto rounded-[2.4rem] grayscale group-hover:grayscale-0 transition duration-700">
                <div class="absolute inset-0 flex items-center justify-center bg-black/60 opacity-0 group-hover:opacity-100 transition">
                    <span class="text-red-600 font-bold tracking-widest">PREVIEW MODE</span>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-wrap gap-4">
        <button onclick="likeProject('<%= project._id %>')" 
                class="btn-red flex-1 md:flex-none flex items-center justify-center gap-2">
            ❤️ LIKE PROJECT
        </button>
        
        <a href="/download/<%= project._id %>" 
           class="glass border-red-600/30 text-white px-8 py-4 rounded-[2.5rem] flex-1 md:flex-none text-center font-bold hover:bg-red-600 transition">
            ⬇️ DOWNLOAD <%= project.type %>
        </a>
    </div>
</main>

<%- include('partials/footer') %>
